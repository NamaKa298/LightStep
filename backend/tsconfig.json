{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "express"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["**/*.ts", "types/*.d.ts"],
  "exclude": ["node_modules"]
}
